<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="RtlHardcoded"
    tools:context=".account.presentation.ui.fragment.AccountFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_background">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/md_theme_background" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_12sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_74sdp"
                    android:layout_height="@dimen/_74sdp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mentor"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="@dimen/_1sdp"
                    android:layout_marginLeft="-24dp"
                    app:civ_circle_background_color="@color/black" />

            </LinearLayout>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_12sdp"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

            <TextView
                android:id="@+id/user_career"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_3sdp"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall" />

            <TextView
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="@string/my_profile"
                android:paddingVertical="@dimen/_9sdp"
                android:paddingHorizontal="@dimen/_5sdp"
                android:drawablePadding="@dimen/_5sdp"
                app:drawableStartCompat="@drawable/ic_user"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                app:drawableEndCompat="@drawable/ic_navigate_next" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/dark_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dark_mode"
                android:layout_marginTop="@dimen/_3sdp"
                android:paddingVertical="@dimen/_9sdp"
                android:paddingHorizontal="@dimen/_5sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"

                app:drawableStartCompat="@drawable/ic_moon" />

            <TextView
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/settings"
                android:layout_marginTop="@dimen/_3sdp"
                android:paddingVertical="@dimen/_9sdp"
                android:paddingHorizontal="@dimen/_5sdp"
                android:drawablePadding="@dimen/_5sdp"

                app:drawableStartCompat="@drawable/ic_setting"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                app:drawableEndCompat="@drawable/ic_navigate_next" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp" />

            <TextView
                android:id="@+id/support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/support"
                android:paddingVertical="@dimen/_9sdp"
                android:paddingHorizontal="@dimen/_5sdp"
                android:drawablePadding="@dimen/_5sdp"
                app:drawableStartCompat="@drawable/ic_support"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                app:drawableEndCompat="@drawable/ic_navigate_next" />

            <TextView
                android:id="@+id/about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/about_us"
                android:paddingVertical="@dimen/_9sdp"
                android:paddingHorizontal="@dimen/_5sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_3sdp"
                app:drawableStartCompat="@drawable/ic_info"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                app:drawableEndCompat="@drawable/ic_navigate_next" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp" />

            <TextView
                android:id="@+id/log_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/log_out"
                android:paddingVertical="@dimen/_9sdp"
                android:paddingHorizontal="@dimen/_5sdp"
                android:drawablePadding="@dimen/_5sdp"
                app:drawableStartCompat="@drawable/ic_sign_out"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>