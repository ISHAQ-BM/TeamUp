<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="RtlHardcoded"
    tools:context=".auth.presentation.ui.fragment.LoginFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_28sdp">

        <TextView
            android:id="@+id/tv_welcome_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/welcome_back"/>


        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:layout_marginTop="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_welcome_back"
            app:layout_constraintLeft_toLeftOf="parent"/>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inputLayout_email"
            android:layout_marginTop="@dimen/_2sdp"
            app:endIconMode="clear_text"
            style="@style/Widget.TeamUp.TextInputLayout.FillBox"
            app:layout_constraintTop_toBottomOf="@id/tv_email">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                style="@style/Widget.TeamUp.TextInputEditText"
                android:hint="@string/example_gmail_com"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>



        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:layout_marginTop="@dimen/_25sdp"
            app:layout_constraintTop_toBottomOf="@id/inputLayout_email"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayout_password"
            android:layout_width="match_parent"
            app:endIconMode="password_toggle"

            android:layout_marginTop="@dimen/_2sdp"
            style="@style/Widget.TeamUp.TextInputLayout.FillBox"
            app:layout_constraintTop_toBottomOf="@id/tv_password">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                style="@style/Widget.TeamUp.TextInputEditText"
                android:hint="@string/password"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>



        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password"
            android:layout_marginTop="@dimen/_3sdp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/md_theme_primary"
            app:layout_constraintLeft_toLeftOf="@id/inputLayout_password"
            app:layout_constraintTop_toBottomOf="@id/inputLayout_password" />


        <Button
            android:id="@+id/login"
            style="@style/Widget.TeamUp.Button.ContainedButton"
            android:text="@string/log_in"
            android:layout_marginTop="@dimen/_18sdp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/forgot_password" />



        <com.google.android.material.divider.MaterialDivider
            android:layout_width="@dimen/_78sdp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_or"
            app:layout_constraintBottom_toBottomOf="@id/tv_or"
            app:layout_constraintRight_toLeftOf="@id/tv_or"/>
        <TextView
            android:id="@+id/tv_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/or"
            android:layout_marginTop="@dimen/_22sdp"
            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
            android:textColor="@color/md_theme_outline"

            android:paddingHorizontal="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/login"
            app:layout_constraintLeft_toLeftOf="@id/login"
            app:layout_constraintRight_toRightOf="@id/login"/>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="@dimen/_78sdp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_or"
            app:layout_constraintBottom_toBottomOf="@id/tv_or"
            app:layout_constraintLeft_toRightOf="@id/tv_or"/>



        <ImageView
            android:id="@+id/linkedin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_linkedin"
            android:background="@drawable/circle_gray"
            android:padding="8dp"
            android:contentDescription="@string/login_with_linkedin_account"
            app:tint="@color/md_theme_primary"
            android:layout_marginRight="@dimen/_25sdp"
            app:layout_constraintRight_toLeftOf="@id/google"
            app:layout_constraintTop_toTopOf="@id/google"
             />
        <ImageView
            android:id="@+id/google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_google"
            android:background="@drawable/circle_gray"
            android:padding="8dp"
            android:contentDescription="@string/login_with_google_account"
            android:layout_marginTop="@dimen/_17sdp"
            app:tint="@color/md_theme_primary"
            app:layout_constraintLeft_toLeftOf="@id/tv_or"
            app:layout_constraintRight_toRightOf="@id/tv_or"
            app:layout_constraintTop_toBottomOf="@id/tv_or"
            />
        <ImageView
            android:id="@+id/github"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_github"
            android:background="@drawable/circle_gray"
            android:padding="8dp"
            android:contentDescription="@string/login_with_github_account"
            android:layout_marginLeft="@dimen/_25sdp"
            app:tint="@color/md_theme_primary"
            app:layout_constraintTop_toTopOf="@id/google"
            app:layout_constraintLeft_toRightOf="@id/google"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_25sdp"
            app:layout_constraintTop_toBottomOf="@id/google"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_3sdp"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="@color/md_theme_outline"
                android:text="@string/don_t_have_an_account"
                />

            <TextView
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_up"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="@color/md_theme_primary"

                />

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/grayOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3D000000"
        android:clickable="true"
        android:visibility="gone"
        android:focusable="true" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:indeterminate="true"
        android:visibility="gone"
        />


</FrameLayout>