<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TeamUp.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/md_theme_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.TeamUp</item>
    </style>

    <style name="Widget.TeamUp.TextInputLayout.FillBox" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeErrorColor">@color/md_theme_error</item>
        <item name="errorIconTint">@color/md_theme_error</item>
        <item name="errorTextColor">@color/md_theme_error</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_9sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_9sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_9sdp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@color/md_theme_surfaceContainerLow</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_9sdp</item>
        <item name="hintEnabled">false</item>
    </style>
    <style name="Widget.TeamUp.TextInputEditText" parent="">
        <item name="android:layout_height">@dimen/_41sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">0dp</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="Widget.TeamUp.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">

        <item name="cornerRadius">@dimen/_9sdp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/_8sdp</item>
        <item name="iconTintMode">add</item>
        <item name="iconTint">@android:color/transparent</item>
        <item name="strokeWidth">@dimen/_2sdp</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="Widget.TeamUp.Button.ContainedButton" parent="@style/Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_41sdp</item>
        <item name="cornerRadius">@dimen/_9sdp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/_8sdp</item>
        <item name="iconTintMode">add</item>
        <item name="iconTint">@android:color/transparent</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.TeamUp.Chip.Choice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_height">@dimen/_31sdp</item>
        <item name="chipStartPadding">@dimen/_6sdp</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipIconSize">@dimen/_14sdp</item>
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="chipCornerRadius">@dimen/_6sdp</item>
        <item name="chipIconVisible">true</item>
        <item name="chipIconTint">@color/chip_icon_color</item>
        <item name="ensureMinTouchTargetSize">false</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelLarge</item>
    </style>
    






    <style name="MD3.Shape.Small.Custom" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="MD3.Shape.Medium.Custom" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="MD3.Shape.Large.Custom" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>