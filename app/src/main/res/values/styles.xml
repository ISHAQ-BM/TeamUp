<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.TeamUp.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeErrorColor">@android:color/holo_red_light</item>
        <item name="errorIconTint">@android:color/holo_red_light</item>
        <item name="errorTextColor">@android:color/holo_red_light</item>
        <item name="errorIconDrawable">@android:drawable/stat_notify_error</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_10sdp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="Widget.TeamUp.TextInputEditText" parent="">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.TeamUp.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="cornerRadius">@dimen/_10sdp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/_8sdp</item>
        <item name="iconTintMode">add</item>
        <item name="iconTint">@android:color/transparent</item>
        <item name="strokeWidth">@dimen/_2sdp</item>
        <item name="strokeColor">@android:color/holo_blue_light</item>
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="Widget.TeamUp.Button.ContainedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="cornerRadius">@dimen/_10sdp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/_8sdp</item>
        <item name="iconTintMode">add</item>
        <item name="iconTint">@android:color/transparent</item>
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="TextAppearance.TeamUp.Text" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.TeamUp.Title3" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TextAppearance.TeamUp.BigText" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TextAppearance.TeamUp.Caption" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10.2sp</item>
    </style>
    <style name="TextAppearance.TeamUp.CaptionBold" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10.2sp</item>
    </style>
    <style name="TextAppearance.TeamUp.SubHeading" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

</resources>